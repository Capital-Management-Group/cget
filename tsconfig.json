{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "node16",
    "moduleResolution": "node16",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "./dist",
    "removeComments": false,
    "lib": ["esnext"],
    "strictNullChecks": true,
    "target": "esnext",
    "strict": true
  },
  "include": ["src/**/*.ts"]
}
