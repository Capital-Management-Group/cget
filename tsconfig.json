{
  "compilerOptions": {
    "outDir": "./dist",

    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2021", // Node 16

    "declaration": true,
    "declarationMap": true,

    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,

    "skipLibCheck": true,
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
