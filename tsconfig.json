{
  "compilerOptions": {
    "outDir": "./dist",

    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "es2022",

    "declaration": true,
    "declarationMap": true,

    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,

    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
